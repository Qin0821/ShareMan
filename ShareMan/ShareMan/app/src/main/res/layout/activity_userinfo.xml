<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appback">

    <include layout="@layout/custom_title"/>

    <!--头像昵称-->
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:paddingBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/myrect_8">
        <RelativeLayout
            android:id="@+id/user_image_manger"
            android:paddingTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal">
            <TextView
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="头像"
                android:textColor="@color/apptitle"
                android:textSize="16sp"/>
            <ImageView
                android:id="@+id/user_info_image"
                android:layout_marginRight="20dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="45dp"
                android:layout_height="45dp" />
            <View
                android:layout_marginLeft="20dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/user_info_image"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/appview"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/user_nickname_manger"
            android:paddingTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal">
            <TextView
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="昵称"
                android:textColor="@color/apptitle"
                android:textSize="16sp"/>
            <ImageView
                android:id="@+id/change_nickname"
                android:layout_marginRight="15dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/main_image_jiantou"/>
            <TextView
                android:id="@+id/user_nickname"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/change_nickname"
                android:layout_marginRight="7dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="里约杰克"
                android:textColor="@color/apptitle"
                android:textSize="16sp"/>
            <View
                android:layout_marginTop="15dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/change_nickname"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/appview"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/user_sex_manger"
            android:paddingTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="55dp">
            <TextView
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="性别"
                android:textColor="@color/apptitle"
                android:textSize="16sp"/>
            <ImageView
                android:id="@+id/change_user_sex"
                android:layout_marginRight="15dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/main_image_jiantou"/>
            <TextView
                android:id="@+id/user_sex"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/change_user_sex"
                android:layout_marginRight="7dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="男"
                android:textColor="@color/apptitle"
                android:textSize="16sp"/>
            <View
                android:layout_marginTop="15dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/user_sex"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/appview"/>
        </RelativeLayout>
    </LinearLayout>

    <!--手机地址-->
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:paddingBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/myrect_8">
        <RelativeLayout
            android:id="@+id/phone_number_manger"
            android:paddingTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal">
            <TextView
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手机号码"
                android:textColor="@color/apptitle"
                android:textSize="16sp"/>
            <ImageView
                android:id="@+id/change_phone_number"
                android:layout_marginRight="15dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/main_image_jiantou"/>
            <TextView
                android:id="@+id/phone_number"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/change_phone_number"
                android:layout_marginRight="7dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15366765552"
                android:textColor="@color/apptitle"
                android:textSize="16sp"/>
            <View
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/change_phone_number"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/appview"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/address_manger"
            android:paddingTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal">
            <TextView
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="地址管理"
                android:textColor="@color/apptitle"
                android:textSize="16sp"/>
            <ImageView
                android:id="@+id/change_address"
                android:layout_marginRight="15dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/main_image_jiantou"/>
            <TextView
                android:id="@+id/user_address"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/change_address"
                android:layout_marginRight="7dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="管理"
                android:textColor="@color/apptitle"
                android:textSize="16sp"/>
            <View
                android:layout_marginTop="15dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/change_address"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/appview"/>
        </RelativeLayout>
        <Button
            android:id="@+id/change_account"
            android:gravity="center"
            android:layout_marginTop="55dp"
            android:layout_gravity="center"
            android:layout_width="250dp"
            android:layout_height="44dp"
            android:text="切换账号"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:background="@drawable/button_react"/>
    </LinearLayout>
</LinearLayout>