<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginTop="25dp"
    android:layout_width="match_parent"
    android:layout_height="500dp"
    android:background="@drawable/myrect_8">

    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="23.5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:text="¥"
            android:textSize="18sp"
            android:textColor="@color/priceColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="1889"
            android:textSize="40sp"
            android:textColor="@color/priceColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:text="回收价"
        android:textSize="14sp"
        android:textColor="@color/appgray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:layout_centerVertical="true"
            android:text="回收机主"
            android:textSize="14sp"
            android:textColor="@color/appgray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_feedback_name"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="微微"
            android:textSize="16sp"
            android:textColor="@color/apptitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/appview"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:layout_centerVertical="true"
            android:text="回收机型"
            android:textSize="14sp"
            android:textColor="@color/appgray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_feedback_time"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="iPhone 7"
            android:textSize="16sp"
            android:textColor="@color/apptitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/appview"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:layout_centerVertical="true"
            android:text="完成时间"
            android:textSize="14sp"
            android:textColor="@color/appgray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_feedback_type"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="2017-10-12"
            android:textSize="16sp"
            android:textColor="@color/apptitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/appview"/>
    </RelativeLayout>


</LinearLayout>