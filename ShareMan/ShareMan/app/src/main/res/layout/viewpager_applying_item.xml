<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/myrect_8"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/tv_applying_phone_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="iPhone 7"
            android:textColor="@color/apptitle"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tv_aplying_phone_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_applying_phone_name"
            android:layout_marginTop="20dp"
            android:text="¥ 1889"
            android:textColor="@color/priceColor"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_loading_pay"
            android:layout_width="66dp"
            android:layout_height="33dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/dialog_button_react"
            android:gravity="center"
            android:text="待支付"
            android:textColor="@color/priceColor"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tv_order_cancel"
            android:layout_width="66dp"
            android:layout_height="33dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@id/tv_loading_pay"
            android:background="@drawable/dialog_button_react"
            android:gravity="center"
            android:text="取消订单"
            android:textColor="@color/priceColor"
            android:textSize="14dp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="20dp"
        android:background="@color/appview" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="申请人"
            android:textColor="@color/appgray"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_applying_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="微微"
            android:textColor="@color/apptitle"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/appview" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="身份证号码"
            android:textColor="@color/appgray"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_id_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="36222819910606322X"
            android:textColor="@color/apptitle"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/appview" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="17.5dp"
            android:text="现住地址"
            android:textColor="@color/appgray"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_id_address"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:maxLines="2"
            android:gravity="end"
            android:text="浙江省杭州市西湖区文三西路文锦大厦905"
            android:textColor="@color/apptitle"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/appview" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="申请日期"
            android:textColor="@color/appgray"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_applying_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="2017-10-12"
            android:textColor="@color/apptitle"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/appview" />
    </RelativeLayout>

</LinearLayout>