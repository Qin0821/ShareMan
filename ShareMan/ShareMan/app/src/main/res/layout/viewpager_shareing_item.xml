<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/myrect_8">

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_shareing_phone_name"
            android:text="iPhone 7"
            android:textSize="20dp"
            android:textColor="@color/apptitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_marginTop="10dp"
            android:id="@+id/ll_color_menmer"
            android:layout_below="@id/tv_shareing_phone_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_shareing_phone_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="黑色"
                android:textColor="@color/appgray"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" / "
                android:textColor="@color/appgray"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_shareing_phone_menmer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="32G"
                android:textColor="@color/appgray"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_shareing_phone_price"
            android:layout_marginTop="10dp"
            android:layout_below="@id/ll_color_menmer"
            android:text="¥ 1889"
            android:textSize="14sp"
            android:textColor="@color/priceColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_dianzixieyi"
            android:layout_alignParentRight="true"
            android:text="电子协议"
            android:textSize="14dp"
            android:gravity="center"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true"
            android:textColor="@color/apptitle"
            android:layout_width="66dp"
            android:layout_height="33dp"
            android:background="@drawable/dialog_button_react"/>
    </RelativeLayout>

    <View
        android:layout_marginTop="10dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/appview"/>

    <RelativeLayout
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:layout_centerVertical="true"
            android:text="使用人"
            android:textSize="14sp"
            android:textColor="@color/appgray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_shareing_name"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="微微"
            android:textSize="16sp"
            android:textColor="@color/apptitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/appview"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:layout_centerVertical="true"
            android:text="身份证号码"
            android:textSize="14sp"
            android:textColor="@color/appgray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_id_number"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="36222819910606322X"
            android:textSize="16sp"
            android:textColor="@color/apptitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/appview"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <TextView
            android:layout_marginTop="17.5dp"
            android:text="现住地址"
            android:textSize="14sp"
            android:textColor="@color/appgray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_shareing_address"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:maxLines="2"
            android:text="浙江省杭州市西湖区文三西路文锦大厦905"
            android:textSize="16sp"
            android:gravity="end"
            android:textColor="@color/apptitle"
            android:layout_width="200dp"
            android:layout_height="wrap_content" />
        <View
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/appview"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:layout_centerVertical="true"
            android:text="共享日期"
            android:textSize="14sp"
            android:textColor="@color/appgray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_shareing_date"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="2017-10-12"
            android:textSize="16sp"
            android:textColor="@color/apptitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/appview"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:layout_centerVertical="true"
            android:text="手机串号"
            android:textSize="14sp"
            android:textColor="@color/appgray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_shareing_chuanhao"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="ABC-123"
            android:textSize="16sp"
            android:textColor="@color/apptitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/appview"/>
    </RelativeLayout>

</LinearLayout>