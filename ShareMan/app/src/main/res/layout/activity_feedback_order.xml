<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/custom_title" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginTop="510dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/bg_under" />

        <android.support.v4.view.ViewPager
            android:id="@+id/feedback_viewpager"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="25dp"

            android:layout_width="match_parent"
            android:layout_height="500dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="405dp"
            android:orientation="horizontal">

            <RadioGroup
                android:id="@+id/radiogroup"
                android:layout_width="match_parent"
                android:layout_height="105dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/radio_react_8"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rb_feedbacking"
                    android:layout_width="83dp"
                    android:layout_height="83dp"
                    android:layout_gravity="center"
                    android:background="@drawable/feedback_selector"
                    android:button="@null"
                    android:clickable="true" />

                <RadioButton
                    android:id="@+id/rb_finshed"
                    android:layout_width="83dp"
                    android:layout_height="83dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="32dp"
                    android:background="@drawable/finished_selector"
                    android:button="@null" />

                <RadioButton
                    android:id="@+id/rb_canceled"
                    android:layout_width="83dp"
                    android:layout_height="83dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="32dp"
                    android:background="@drawable/canceled_selector"
                    android:button="@null" />
            </RadioGroup>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>