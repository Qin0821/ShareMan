<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/jump"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:background="@drawable/btn_close"/>

    <RelativeLayout
        android:layout_marginTop="60dp"
        android:layout_marginBottom="40dp"
        android:layout_marginRight="32.5dp"
        android:layout_marginLeft="32.5dp"
        android:background="@drawable/myrect_8"
        android:elevation="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_login_close"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/image_close_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    <LinearLayout
        android:paddingBottom="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:text="登录账号"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="30dp"
            android:textSize="20sp"
            android:textColor="@color/apptitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/et_login_number"
            android:hint="输入您的手机号"
            android:maxLines="1"
            android:maxLength="11"
            android:inputType="phone"
            android:textColorHint="@color/apptext"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:textSize="16sp"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View
            android:layout_marginTop="12dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@color/appview"
            android:layout_width="match_parent"
            android:layout_height="1px"/>

        <Button
            android:id="@+id/btn_login_next"
            android:text="下一步"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/button_gray_react"
            android:layout_width="match_parent"
            android:layout_height="44dp" />
    </LinearLayout>
    </RelativeLayout>

</RelativeLayout>