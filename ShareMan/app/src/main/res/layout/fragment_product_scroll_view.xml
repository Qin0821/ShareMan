    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/slidedetails_front"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/layout_top" />

        <ImageView
            android:id="@+id/back"
