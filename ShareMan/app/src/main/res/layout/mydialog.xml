<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_height="142dp"
    android:background="@drawable/myrect_8">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/et_change_nickname"
            android:layout_centerInParent="true"
            android:layout_marginTop="35dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="微微一笑"
            android:textColor="@color/apptitle"
            android:background="@null"
            android:textSize="16sp"
            android:textColorHint="@color/appgray"/>
        <ImageView
            android:id="@+id/clear_nickname"
            android:layout_marginRight="40dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_clear"/>
    </RelativeLayout>
    
    <View
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/appview"/>
    
    <Button
        android:id="@+id/change_nickname_ok"
        android:text="确定"
        android:layout_marginTop="22dp"
        android:background="@drawable/dialog_button_react"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:textColor="@color/apptitle"
        android:textSize="14sp"/>

</LinearLayout>