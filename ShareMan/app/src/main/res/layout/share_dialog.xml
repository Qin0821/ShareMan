<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_gravity="center_horizontal"
    android:layout_width="320dp"
    android:layout_height="142dp"
    android:background="@drawable/myrect_8">

    <View
        android:id="@+id/view1"
        android:layout_marginTop="28dp"
        android:layout_width="122dp"
        android:layout_height="1px"
        android:background="@color/appview"/>

    <TextView
        android:id="@+id/textview1"
        android:layout_centerHorizontal="true"
        android:text="分享到"
        android:textSize="16sp"
        android:textColor="@color/apptitle"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
        android:id="@+id/view2"
        android:layout_marginTop="28dp"
        android:layout_alignParentRight="true"
        android:layout_width="122dp"
        android:layout_height="1px"
        android:background="@color/appview"/>

    <ImageView
        android:id="@+id/share_weixin"
        android:layout_below="@id/view1"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="36dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/weixin"/>

    <ImageView
        android:id="@+id/share_pengyouquan"
        android:layout_alignParentRight="true"
        android:layout_below="@id/view1"
        android:layout_marginRight="55dp"
        android:layout_marginTop="36dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/pengyouquan"/>

    <View
        android:layout_marginTop="36dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/textview1"
        android:layout_width="1px"
        android:layout_height="50dp"
        android:background="@color/appview"/>

</RelativeLayout>