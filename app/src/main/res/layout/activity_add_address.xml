<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appback">

    <include layout="@layout/custom_title"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_marginRight="18dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="20dp"
        android:paddingTop="25dp"
        android:paddingBottom="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/myrect_8">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_marginLeft="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收货人"
                android:textSize="12sp"
                android:textColor="@color/apptext"/>
            <EditText
                android:id="@+id/et_receiver_name"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="25dp"
                android:maxLines="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="收货人姓名"
                android:background="@null"
                android:textColorHint="@color/appgray"
                android:textSize="16dp"/>
            <View
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="10dp"
                android:background="@color/appview"
                android:layout_width="match_parent"
                android:layout_height="1px"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_marginLeft="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="联系电话"
                android:textSize="12sp"
                android:textColor="@color/apptext"/>
            <EditText
                android:id="@+id/et_mobile_phone_number"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="25dp"
                android:inputType="phone"
                android:maxLength="11"
                android:maxLines="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="您的常用手机号"
                android:background="@null"
                android:textColorHint="@color/appgray"
                android:textSize="16dp"/>
            <View
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="10dp"
                android:background="@color/appview"
                android:layout_width="match_parent"
                android:layout_height="1px"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_marginLeft="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="选择地址"
                android:textSize="12sp"
                android:textColor="@color/apptext"/>
            <TextView
                android:id="@+id/tv_choose_address"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="浙江省  杭州市  西湖区"
                android:textColor="@color/appgray"
                android:textSize="16dp"/>
            <View
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="10dp"
                android:background="@color/appview"
                android:layout_width="match_parent"
                android:layout_height="1px"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_marginLeft="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="详细地址"
                android:textSize="12sp"
                android:textColor="@color/apptext"/>
            <EditText
                android:id="@+id/et_detail_address"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="尽可能的描述您的详细地址"
                android:background="@null"
                android:textColorHint="@color/appgray"
                android:textSize="16dp"/>
            <View
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="10dp"
                android:background="@color/appview"
                android:layout_width="match_parent"
                android:layout_height="1px"/>
        </LinearLayout>

        <Button
            android:id="@+id/save_address"
            android:gravity="center"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:text="保存"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:background="@drawable/button_react"/>
    </LinearLayout>
    </ScrollView>

</LinearLayout>