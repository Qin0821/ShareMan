<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/custom_title"/>

    <ImageView
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/top_icon"/>

    <TextView
        android:text="提交成功"
        android:textSize="20sp"
        android:textColor="@color/apptitle"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:text="请将手机寄送到指定收货地址"
        android:textSize="14sp"
        android:textColor="@color/apptext"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
        android:layout_marginTop="22.5dp"
        android:background="@color/appview"
        android:layout_width="match_parent"
        android:layout_height="1px"/>

    <LinearLayout
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="27dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:layout_marginLeft="105dp"
                android:layout_centerVertical="true"
                android:text="张显泽"
                android:textSize="16sp"
                android:textColor="@color/apptitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_alignParentLeft="true"
                android:text="收件人"
                android:textSize="14sp"
                android:textColor="@color/appgray"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <View
                android:layout_alignParentBottom="true"
                android:background="@color/appview"
                android:layout_width="match_parent"
                android:layout_height="1px"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:layout_marginLeft="105dp"
                android:layout_centerVertical="true"
                android:text="0755-82552759"
                android:textSize="16sp"
                android:textColor="@color/apptitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_alignParentLeft="true"
                android:text="联系电话"
                android:textSize="14sp"
                android:textColor="@color/appgray"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <View
                android:layout_alignParentBottom="true"
                android:background="@color/appview"
                android:layout_width="match_parent"
                android:layout_height="1px"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp">
            <TextView
                android:gravity="center_vertical"
                android:layout_marginLeft="105dp"
                android:layout_centerVertical="true"
                android:text="深圳市福田区华强北街道华发北路桑达雅苑21F"
                android:textSize="16sp"
                android:textColor="@color/apptitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_alignParentLeft="true"
                android:text="收件地址"
                android:textSize="14sp"
                android:textColor="@color/appgray"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <View
                android:layout_alignParentBottom="true"
                android:background="@color/appview"
                android:layout_width="match_parent"
                android:layout_height="1px"/>
        </RelativeLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_submit_successful"
        android:layout_marginTop="60dp"
        android:layout_gravity="center_horizontal"
        android:text="完成"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:layout_width="250dp"
        android:layout_height="44dp"
        android:background="@drawable/button_react"/>
</LinearLayout>